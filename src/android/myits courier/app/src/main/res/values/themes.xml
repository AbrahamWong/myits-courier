<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyITSCourier" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customized theme here. -->
        <item name="textAppearanceBody1">@style/TextAppearance.MyITSCourier.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MyITSCourier.Body2</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MyITSCourier.Headline4</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyITSCourier.Caption</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyITSCourier.Subtitle1</item>
        <item name="materialButtonStyle">@style/Widget.MyITSCourier.Button</item>

        <item name="toolbarStyle">@style/Widget.MyITSCourier.Toolbar</item>
    </style>

    <!-- TextAppearance Body 1. -->
    <style name="TextAppearance.MyITSCourier.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- TextAppearance Body 2. -->
    <style name="TextAppearance.MyITSCourier.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- TextAppearance Headline 4. -->
    <style name="TextAppearance.MyITSCourier.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextAppearance Caption -->
    <style name="TextAppearance.MyITSCourier.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="lineHeight">24dp</item>
    </style>

    <!-- TextAppearance Subtitle1 -->
    <style name="TextAppearance.MyITSCourier.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextAppearance Button. -->
    <style name="TextAppearance.MyITSCourier.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Button. -->
    <style name="Widget.MyITSCourier.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyITSCourier.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.MyITSCourier.Button</item>
    </style>

    <!-- Button Style Overlay. -->
    <style name="ThemeOverlay.MyITSCourier.Button" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- toolbar Style -->
    <style name="Widget.MyITSCourier.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyITSCourier.Toolbar</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ThemeOverlay.MyITSCourier.Toolbar" parent="">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryVariant">@color/colorJustGrey</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <style name="ShapeAppearance.MyITSCourier.MediumComponent.Rounded.Main" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="ShapeAppearance.MyITSCourier.MediumComponent.Rounded.Sub" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>